@model List<DisplayOurSpecialResponse>
<section class="w3l-portfolio-8 py-5">
    <div class="portfolio-main py-md-5 py-4">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-8">
                    <div class="section-heading mb-sm-5 mb-4">
                        <h3 class="title-style mb-2">Özel Ürünlerimiz</h3>
                        <p class="lead">
                            Dünya çapında ünlü şeflerimizin sizler için hazırladığı özel yemeklerimizi tadmak ister misiniz? Özenle seçilmiş malzemelerden yapılan lezzetli yemekler...
                        </p>
                    </div>
                </div>
            </div>
            <div class="row galler-top">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-6 protfolio-item hover14">
                        <a href="/Menu/Index" data-lightbox="example-set" data-title="Branding Design">
                            <figure>
                                <img src="@item.ImageUrl" alt="product" class="img-fluid">
                                <div class="p-4">
                                    <p>@item.Description</p>
                                    <a href="/Menu/Index" class="mb-5 img-title">@item.Name</a>
                                </div>
                            </figure>
                        </a>
                    </div>
                }
            </div>
            <div class="text-center">
                <a href="/Menu/Index" class="btn btn-style-white btn-style-primary mt-lg-5 mt-2">Menümüzü İnceleyin</a>
            </div>
        </div>
    </div>
</section>



